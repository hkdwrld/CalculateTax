@model IEnumerable<TaxForm>

@{
    ViewData["Title"] = "Tax Forms";
}

<h2>Tax Forms</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">Total Income</th>
            <th scope="col">Standard Deduction</th>
            <th scope="col">Taxable Income</th>
            <th scope="col">Tax</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
            if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="7">No tax forms found.</td>
                </tr>
            }
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@item.Name</td>
                <td>@item.FilingStatus</td>
                <td>@item.Income</td>
                <td>@item.StandardDeduction</td>
                <td>@item.TaxableIncome</td>
                <td>@item.Tax</td>
            </tr>
            i++;
        }
    </tbody>
</table>
