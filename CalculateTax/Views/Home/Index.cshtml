@model InputForm

@{
    ViewData["Title"] = "Home Page";
}


<div class="row d-flex allign-items-center justify-content-center">
    <div class="col-md-6 card p-3">
        <h2>Calculate</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Income" class="form-label"></label>
                <input class="form-control" asp-for="Income">
                <span asp-validation-for="Income" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FilingStatus" class="form-label"></label>
                <select class="form-control" asp-for="FilingStatus" >
                    <option value="">-- Select Filing Status --</option>
                    @foreach (var status in ViewBag.FilingStatusOptions)
                    {
                        <option value="@status.Value">@status.Text</option>
                    }
                </select>
                <span asp-validation-for="FilingStatus" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Calculate</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}